<h1>Blog List</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.name %></td>
    <td><%= blog.content %></td>
    <td><%= link_to "Edit Blog", edit_blog_path(blog.id) %></td>
    <td><%= link_to "Delete Blog", blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to 'Create New Blog', 'new_blog_path'  %>
